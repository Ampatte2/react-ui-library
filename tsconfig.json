{
    "compilerOptions": {
        "outDir": "dist",
        "module": "commonjs",
        "target": "es2017",
        "lib": ["es2017", "dom"],
        "sourceMap": false,
        "jsx": "react",
        "strict": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "rootDirs": ["src", "stories"],
        "baseUrl": ".",
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "suppressImplicitAnyIndexErrors": true,
        "noUnusedLocals": true,
        "declaration": true,
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "paths": {
            "@Layouts/*": ["./src/Fragments/*", "./dist/Fragments/*"],
            "@Layouts": ["./src/Fragments", "./dist/Fragments"],
            "@Containers/*": ["./src/Containers/*"],
            "@Containers": ["./src/Containers"],
            "@Inputs/*": ["./src/Inputs/*"],
            "@Inputs": ["./src/Inputs"],
            "@Text/*": ["./src/Text/*"],
            "@Text": ["./src/Text"],
            "@Themes/*": ["./src/Themes/*"],
            "@Themes": ["./src/Themes"],
            "@Utils/*": ["./src/Utils/*"],
            "@Utils": ["./src/Utils"]
        }
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "scripts", "dist"]
}
